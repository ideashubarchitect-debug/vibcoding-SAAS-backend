{
    "name": "vibeable/dev-backend",
    "description": "vibeable.dev SaaS REST API",
    "type": "project",
    "require": {
        "php": ">=8.3",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Vibeable\\Backend\\": "app/"
        },
        "classmap": [
            "database/"
        ]
    },
    "config": {
        "optimize-autoloader": true
    },
    "scripts": {
        "migrate": "php database/migrate.php",
        "test": "phpunit"
    }
}
