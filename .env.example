# App
APP_ENV=local
APP_DEBUG=1
APP_URL=https://vibeable.dev
APP_KEY=

# Database (MySQL 8+)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=vibeable
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# Session & cache (optional Redis)
CACHE_DRIVER=file
SESSION_DRIVER=file

# Auth
JWT_SECRET=
JWT_TTL=43200
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=
OAUTH_FACEBOOK_CLIENT_ID=
OAUTH_FACEBOOK_CLIENT_SECRET=

# AI providers (admin can override via dashboard)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROK_API_KEY=
DEEPSEEK_API_KEY=
ZHIPU_API_KEY=

# Payments
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# reCAPTCHA
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Storage
STORAGE_PATH=storage/uploads
STORAGE_URL=/storage

# Publishing
PUBLISH_BASE_DOMAIN=vibeable.dev
SSL_PROVISION=letsencrypt

# Email (for invoices, notifications)
MAIL_DRIVER=log
MAIL_FROM=noreply@vibeable.dev
